<odoo>
    <data>
        <!-- Action -->
        <record id="action_my_module" model="ir.actions.act_window">
            <field name="name">My Module</field>
            <field name="res_model">my_module.my_module</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_my_module_root" name="My Module" sequence="10"/>
        <menuitem id="menu_my_module_submenu" name="My Module" parent="menu_my_module_root" action="action_my_module" sequence="10"/>

        <!-- Tree View -->
        <record id="view_my_module_tree" model="ir.ui.view">
            <field name="name">my_module.my_module.tree</field>
            <field name="model">my_module.my_module</field>
            <field name="arch" type="xml">
                <tree string="My Module">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_my_module_form" model="ir.ui.view">
            <field name="name">my_module.my_module.form</field>
            <field name="model">my_module.my_module</field>
            <field name="arch" type="xml">
                <form string="My Module">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
